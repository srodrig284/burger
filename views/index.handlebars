

<div class="wrapper">
    <div class="row">
        <div class="col-xs-2">
               <img src="/img/transparent.gif" class="img-rounded burger-img">
        </div>
        <div class="col-xs-10">
            <div class="jumbotron">
                <h1>Da Burger Joint</h1>
            </div>
        </div>
    </div>


<h2>Burgers that are ready to be devoured!</h2>
<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.id}}. {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button class="btn btn-primary" type="submit">EAT THIS BURGER NOW!</button>
        </form>
        <form action="/{{this.id}}?_method=DELETE" method="POST">
          <input type="hidden" name="id" value="{{this.id}}">
          <button class="btn btn-danger" type="submit">DELETE this burger!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.id}}. {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button class="btn btn-primary type="submit">PUT BURGER BACK ON MENU!</button>
        </form>
        <form action="/{{this.id}}?_method=DELETE" method="POST">
          <input type="hidden" name="id" value="{{this.id}}">
          <button class="btn btn-danger" type="submit">DELETE this burger!</button>
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="bn">Burger Name:</label>
    <input type="text" id="bn" name="name">
  </div>

  <button class="btn btn-info type="submit">Add Burger</button>
</form>
</div>